        <TextBox x:Name="txtKontaktZaposlenog" Margin="110,140,0,0" HorizontalAlignment="Left"   VerticalAlignment="Top" Height="23" Width="120" TextWrapping="Wrap"/>

        <Button  x:Name="btnSacuvaj" Content="Sacuvaj" HorizontalAlignment="Left" Margin="67,211,0,0" VerticalAlignment="Top" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkazi" HorizontalAlignment="Left" Margin="201,211,0,0" VerticalAlignment="Top" Click="btnOtkazi_Click" />

    </Grid>
