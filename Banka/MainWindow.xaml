        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Height="30" VerticalAlignment="Bottom" Width="auto" Orientation="Horizontal"  >
            <Button x:Name="btnDodaj"  Content="Dodaj" Height="30" Width="120" Click="btnDodaj_Click">
                <Button.Background>
                    <SolidColorBrush Color="LightBlue"/>
