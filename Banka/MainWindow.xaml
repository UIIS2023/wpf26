        <!--  ne moze da se menja pisanjem vec pomocu dugmica, svaki drugi red u roze, korisnik ne moze dodati redove, moze se samo selektovati red, ne mozemo selektovati vise redova odjednom -->
        <DataGrid.Background>
            <SolidColorBrush Color="White"/>
        </DataGrid.Background>
        <DataGrid.Foreground>
            <SolidColorBrush Color="DimGray"/>
        </DataGrid.Foreground>
        <DataGrid.BorderBrush>
            <SolidColorBrush Color="White"/>
        </DataGrid.BorderBrush>
        <DataGrid.AlternatingRowBackground>
